<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selectable_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView8"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageView8"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/light_black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.6"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffd0d0d0" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/white"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/imageView60"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="11dp"
                android:src="@drawable/itemleftlogo1" />

            <TextView
                android:id="@+id/bm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/imageView60"
                android:singleLine="true"
                android:text="17005003_123021_31C"
                android:textColor="@color/light_black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:text="D:000214000-S"
                android:textColor="@color/light_black"
                android:textSize="15sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView61"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ffd0d0d0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp">

                    <RelativeLayout
                        android:id="@+id/relativeLayout9"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignTop="@+id/relativeLayout7"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/relativeLayout7">

                        <com.example.jamiexiong.myapplication.view.RoundAngleImageView
                            android:id="@+id/roundAngleImageView22"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:layout_alignLeft="@+id/gx"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentRight="false"
                            android:layout_alignRight="@+id/gx"
                            android:layout_marginLeft="-5dp"
                            android:layout_marginRight="-5dp"
                            android:src="@color/bg_lanse_b" />

                        <TextView
                            android:id="@+id/gx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:singleLine="true"
                            android:text="冷镦"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayout7"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignTop="@+id/relativeLayout6"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/relativeLayout6">

                        <com.example.jamiexiong.myapplication.view.RoundAngleImageView
                            android:id="@+id/roundAngleImageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:layout_alignLeft="@+id/sb"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentRight="false"
                            android:layout_alignRight="@+id/sb"
                            android:layout_marginLeft="-5dp"
                            android:layout_marginRight="-5dp"
                            android:src="@color/activitybarblue3" />

                        <TextView
                            android:id="@+id/sb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:singleLine="true"
                            android:text="CD-213"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayout6"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp">

                        <com.example.jamiexiong.myapplication.view.RoundAngleImageView
                            android:id="@+id/roundAngleImageView21"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:layout_alignLeft="@+id/cj"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentRight="false"
                            android:layout_alignRight="@+id/cj"
                            android:layout_marginLeft="-5dp"
                            android:layout_marginRight="-5dp"
                            android:src="@color/activitybarblue2" />

                        <TextView
                            android:id="@+id/cj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:singleLine="true"
                            android:text="2车间"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignTop="@+id/relativeLayout9"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/relativeLayout9">

                        <com.example.jamiexiong.myapplication.view.RoundAngleImageView
                            android:id="@+id/roundAngleImageView24"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:layout_alignLeft="@+id/xdsl"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentRight="false"
                            android:layout_alignRight="@+id/xdsl"
                            android:layout_marginLeft="-5dp"
                            android:layout_marginRight="-5dp"
                            android:src="@color/bg_chengse_b" />

                        <TextView
                            android:id="@+id/xdsl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:singleLine="true"
                            android:text="4.72"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imageView8"
                        android:layout_marginLeft="15dp"
                        android:layout_toEndOf="@+id/imageView8"
                        android:singleLine="true"
                        android:text="开始时间："
                        android:textColor="@color/light_black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/sj1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imageView8"
                        android:layout_toEndOf="@+id/imageView8"
                        android:singleLine="true"
                        android:text="2017-10-06"
                        android:textColor="@color/light_black"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imageView8"
                        android:layout_marginLeft="15dp"
                        android:layout_toEndOf="@+id/imageView8"
                        android:singleLine="true"
                        android:text="结束时间："
                        android:textColor="@color/light_black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/sj2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imageView8"
                        android:layout_toEndOf="@+id/imageView8"
                        android:singleLine="true"
                        android:text="2018-08-12"
                        android:textColor="@color/light_black"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8">

                <ImageView
                    android:id="@+id/imageView62"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/y3" />

                <TextView
                    android:id="@+id/zt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="已报功"
                    android:textColor="@color/wanchengcolor"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffd0d0d0" />
</LinearLayout>